<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    >

    <LinearLayout android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9AC2FE">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/imagen_menu"
            android:id="@+id/imageViewMiPedido"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/tvNombreMiProducto" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvPrecioMiProducto"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="X"
            android:id="@+id/btnEliminarMiPedido"
            android:textSize="35dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#4846BD"
            android:textColor="#FFFFFF"
             />
    </LinearLayout>
</LinearLayout>