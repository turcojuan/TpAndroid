<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_registro"
    android:background="#AAADE1">

    <LinearLayout android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp">

        <TextView
            android:text="@string/titulo_login"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:id="@+id/textV11"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:text="@string/desc_registro_user"
            android:layout_width="214dp"
            android:layout_height="50dp"
            android:id="@+id/textV22"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="@string/label_nombre"
            android:id="@+id/textV33"
            android:textSize="15dp"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNombreRegis"
            android:hint="@string/edit_nombre"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/label_apellido"
            android:id="@+id/textV34"
            android:textSize="15dp"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextApeRegis"
            android:hint="@string/edit_apellido"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/label_dni"
            android:id="@+id/textV35"
            android:textSize="15dp"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDNIRegis"
            android:hint="@string/edit_dni"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/label_mail"
            android:id="@+id/textV36"
            android:textSize="15dp"

            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextMailRegis"
            android:hint="@string/edit_mail"
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Clave"
            android:id="@+id/textV37"
            android:textSize="15dp"

            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextClaveRegis"
            android:hint="@string/edit_clave"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/label_reingrese"
            android:id="@+id/textV38"
            android:textSize="15dp"

            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextReingresoRegis"
            android:hint="@string/edit_reingrese"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/btn_registrarse"
            android:id="@+id/btnRegis"
            android:textSize="15dp"
            />
    </LinearLayout>
</LinearLayout>