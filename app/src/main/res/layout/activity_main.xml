<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#AAADE1">
    <!--- android:background="#9A9CC7" -->




    <LinearLayout android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp">

        <TextView
            android:text="@string/titulo_login"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:id="@+id/textV1"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:text="@string/desc_login"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:id="@+id/textV2"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/usuarios"
            android:layout_gravity="center"
            android:id="@+id/imageView" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/label_mail"
            android:id="@+id/textV3"
            android:textSize="15dp"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextMail"
            android:hint="@string/edit_mail"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/label_clave"
            android:id="@+id/textV4"
            android:textSize="15dp"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextPass"
            android:hint="@string/edit_clave"
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ch_recuerdame"
            android:id="@+id/checkRecordarme"
            android:textSize="15dp"

            />

       />

    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIngresar"
            android:text="@string/btn_ingresar"
            android:textSize="15dp"
            android:layout_gravity="right"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_registrarse"
            android:id="@+id/btnRegis"
            android:textSize="15dp"
            android:layout_gravity="left"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OkLoggin"
            android:id="@+id/btnComprobacionLogin"
            android:textSize="15dp"
            android:layout_gravity="left"
            />

    </LinearLayout>

</LinearLayout>