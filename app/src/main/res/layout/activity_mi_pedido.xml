<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">


        <LinearLayout android:orientation="vertical"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Mi Pedido"
                android:id="@+id/txtMiPedido"
                android:textSize="27dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>



        </LinearLayout>
        <LinearLayout android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Importe estimado:"
                    android:id="@+id/tvImporteMiPedido"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:id="@+id/tvSignoPesos1"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:id="@+id/tvImporteEstimadoMiPedido"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"
                    />


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listMiPedido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

    </LinearLayout>
</LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnEnviarPedidoMiPedido"
        android:layout_gravity="bottom|right"
        android:src="@android:drawable/ic_menu_send"
        android:layout_margin="30dp"
        />


</android.support.design.widget.CoordinatorLayout>